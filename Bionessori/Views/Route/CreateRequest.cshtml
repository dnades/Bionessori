@{
	Layout = "_Layout";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>@ViewData["Title"]</title>
	<link href="~/css/Header.css" rel="stylesheet" />
	<link href="~/css/Main.css" rel="stylesheet" />
	<link href="~/css/Footer.css" rel="stylesheet" />
</head>
<body>
	<script src="https://cdn.jsdelivr.net/npm/vue"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="https://use.fontawesome.com/1c903a9a3d.js"></script>

	<div id="main_mrp" class="main-block-card">		
		<div>
			<div class="col-lg-12">
				<div class="row block-main-info">
					<div class="btn-block-main mb-3 col-lg-12">
						<!-- Левая секция кнопок -->
						<div class="btn-left-block">
							<div class="btns">
								<nav aria-label="breadcrumb">
									<ol class="breadcrumb">
										<li class="breadcrumb-item"><a href="@Url.Action("Index", "Route")">Главная</a></li>

										<li class="breadcrumb-item">
											<a href="@Url.Action("RouteMRP", "Route")">Планирование потребностей в материалах</a>
										</li>

										<li class="breadcrumb-item">
											<a href="@Url.Action("GetRequests", "Route")">Список заявок</a>
										</li>

										<li class="breadcrumb-item active" aria-current="page">Создание заявки</li>
									</ol>
								</nav>
							</div>
						</div>

						<!-- Правая секция кнопок -->
						<div class="btn-right-block">
							<button type="button" id="id-create-card" class="btn-item btn btn-default btn-create-card form-control-modal" v-on:click="">Отменить</button>

							<button type="button" id="id-create-card" class="btn-item btn btn-default btn-create-card form-control-modal" v-on:click="onCreateRequest">Сохранить заявку</button>
						</div>
					</div>

					<!-- Секция создания заявки. -->
					<div class="mt-3 column-1">
						<div class="row-1">
							<label for="#id-select-material">Материал</label>
							<select id="id-select-material" class="form-control-sm form-card">
								<option></option>
								<option v-for="el in aDistinctMaterials">{{el.material}}</option>
							</select>
							<div class="checkbox-date">
								<input type="checkbox" id="id-check-material" class="form-control-sm"><span class="ml-1">Такого материала еще нет</span>
							</div>
							<button type="button" id="id-create-card" class="btn-item btn btn-default btn-sm btn-create-card form-control-modal mb-3" v-on:click="onAddMaterialRequest">Добавить материал в заявку</button>

							<label for="#id-select-group">Группа</label>
							<select id="id-select-group" class="form-control-sm form-card">
								<option></option>
								<option v-for="el in aMaterialsGroups">{{el.material_group}}</option>
							</select>
							<div class="checkbox-date">
								<input type="checkbox" id="id-check-group" class="form-control-sm"><span class="ml-1">Не знаю к какой группе относится материал</span>
							</div>

							<label for="#id-select-count">Количество материала</label>
							<input type="number" id="id-select-count" class="form-control-sm">

							<label for="#id-select-measure">Ед.Изм.</label>
							<select id="id-select-measure" class="form-control-sm form-card">
								<option></option>
								<option v-for="el in aMeasures">{{el.measure}}</option>
							</select>
							<div class="checkbox-date">
								<input type="checkbox" id="id-check-werehouse-num" class="form-control-sm"><span class="ml-1">Не знаю ед.изм. для этого материала</span>
							</div>

							<label for="#id-select-werehouse">Номер склада</label>
							<select id="id-select-werehouse" class="form-control-sm form-card">
								<option></option>
								<option v-for="el in aWerehousesNames">{{el.werehouse_number}}</option>
							</select>
							<div class="checkbox-date">
								<input type="checkbox" id="id-check-werehouse-num" class="form-control-sm"><span class="ml-1">Не знаю номер склада</span>
							</div>
						</div>
					</div>

					<div class="mt-3 column-2">
						<div class="row-2">
							<h3>Материалы заявки</h3>
							<ul class="list-group">
								<li v-for="el in aAddedMaterials" class="list-group-item">{{el}}</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<script src="~/js/MRP.js"></script>
	<script src="~/js/Route.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>