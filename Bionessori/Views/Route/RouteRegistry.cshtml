@{
	Layout = "_Layout";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>@ViewData["Title"]</title>
	<link href="~/css/Header.css" rel="stylesheet" />
	<link href="~/css/Main.css" rel="stylesheet" />
	<link href="~/css/Footer.css" rel="stylesheet" />
</head>

<body>
	<div id="registry">
		<div class="row">
			<div class="container">
				<!-- Главная секция кнопок -->
				<div class="btn-block-main">
					<!-- Левая секция кнопок -->
					<div class="btn-left-block">
						<div class="btns">
							<nav aria-label="breadcrumb">
								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="@Url.Action("Index", "Route")">Главная</a></li>

									<li class="breadcrumb-item active" aria-current="page">Регистратура</li>
								</ol>
							</nav>
						</div>
					</div>

					<!-- Правая секция кнопок -->
					<div class="btn-right-block">
						<button type="button" class="btn-item btn btn-default btn-create-card" value="mrp_requests_list" v-on:click="onRouteReq">Вызвать скорую</button>

						<button type="button" class="btn-item btn btn-default btn-create-card" value="mrp_requests_list" v-on:click="onRouteReq">Направить на исследование</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Секция модального окна обратной связи -->
		<div class="modal fade" id="id-feedback-modal" tabindex="-1" role="dialog" aria-labelledby="feedbackModalLabel" aria-hidden="true">
			<div id="id-feedback-modall" class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="feedbackModalLabel">Обратная связь</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>

					<div class="modal-body">
						<div class="form-group">
							<label for="#id-feedback">Сообщение:</label><br />
							<textarea type="text" id="id-feedback" class="form-control"></textarea>
						</div>
					</div>

					<div class="modal-footer">
						<button type="button" class="btn-item btn btn-default" data-dismiss="modal" v-on:click="">Отправить</button>
						<button type="button" class="btn-item btn btn-default" data-dismiss="modal">Закрыть</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Секция с таблицей со списком записей на прием. -->
		<div class="mr-2">
			<h3>Список записей на прием</h3>
			<input class="form-control input-search mb-1" id="id-search-request" type="text" v-on:keyup.enter="" placeholder="Поиск по номеру записи на прием">
			<table id="id-request-list-table" class="table table-bordered">
				<thead>
					<tr>
						<th class="text-center" scope="col">
							<input type="checkbox">
						</th>

						<th class="text-center" scope="col">
							<button class="btn btn-link" value="card_number" v-on:click="">
								Регистрационный номер
							</button>
						</th>

						<th class="text-center" scope="col">
							<button class="btn btn-link">
								Дата приема
							</button>
						</th>

						<th class="text-center" scope="col">
							<button class="btn btn-link">
								№ паспорта врача
							</button>
						</th>

						<th class="text-center" scope="col">
							<button class="btn btn-link" value="req_status" v-on:click="sortedRequeest">
								Врач
							</button>
						</th>

						<th class="text-center" scope="col"></th>
						<th class="text-center" scope="col"></th>
					</tr>
				</thead>

				<tbody>
					<tr class="tbl-item tbl-row-click" v-for="" v-on:dblclick="">
						<th class="text-center" scope="col">
							<input type="checkbox">
						</th>

						<td class="text-center">
							<span>{{}}</span>
						</td>

						<td class="text-center">
							<span>{{}}</span>
						</td>

						<td class="text-center">
							<span>{{}}</span>
						</td>

						<td class="text-center">
							<span>{{}}</span>
						</td>

						<td class="text-center state">
							<button type="button" id="id-icon-edit" class="btn btn-default btn-sm" value="edit_request" v-on:click="onRouteEditRequest">
								<i class="fa fa-pencil" aria-hidden="true"></i>
							</button>
						</td>

						<td class="text-center state">
							<button type="button" id="id-icon-delete" class="btn btn-default btn-sm" data-toggle="modal" data-target="#delete-card-modal" v-on:click="onBeforeDeleteRequest">
								<i class="fa fa-trash-o" aria-hidden="true"></i>
							</button>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<script src="~/js/Route.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>