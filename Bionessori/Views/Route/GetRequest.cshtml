@{
	Layout = "_Layout";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>@ViewData["Title"]</title>
	<link href="~/css/Header.css" rel="stylesheet" />
	<link href="~/css/Main.css" rel="stylesheet" />
	<link href="~/css/Footer.css" rel="stylesheet" />
</head>
<body>
	<script src="https://cdn.jsdelivr.net/npm/vue"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="https://use.fontawesome.com/1c903a9a3d.js"></script>

	<div id="main_mrp" class="main-block-card">
		<div>
			<div class="col-lg-12">
				<div class="row block-main-info">
					<div class="btn-block-main mb-3 col-lg-12">
						<!-- Левая секция кнопок -->
						<div class="btn-left-block">
							<div class="btns">
								<nav aria-label="breadcrumb">
									<ol class="breadcrumb">
										<li class="breadcrumb-item"><a href="@Url.Action("Index", "Route")">Главная</a></li>

										<li class="breadcrumb-item">
											<a href="@Url.Action("RouteMRP", "Route")">Планирование потребностей в материалах</a>
										</li>

										<li class="breadcrumb-item">
											<a href="@Url.Action("GetRequests", "Route")">Список заявок</a>
										</li>

										<li class="breadcrumb-item active" aria-current="page">Просмотр заявки</li>
									</ol>
								</nav>
							</div>
						</div>

						<!-- Правая секция кнопок -->
						<div class="btn-right-block">
							
						</div>
					</div>

					<!-- Секция просмотра заявки. -->
					<div class="mt-3 column-1">
						<div class="row-1" v-for="el in aSelectRequest">
							<label for="#id-select-count"><strong>№ заявки:</strong></label>
							<label id="id-num-req" class="form-control-sm">{{el.number}}</label>

							<label for="#id-select-count"><strong>Группа:</strong></label>
							<label id="id-num-req" class="form-control-sm">{{el.material_group}}</label>

							<label for="#id-select-count"><strong>Ед.Изм.:</strong></label>
							<label id="id-num-req" class="form-control-sm">{{el.measure}}</label>

							<label for="#id-select-count"><strong>Количество:</strong></label>
							<label id="id-num-req" class="form-control-sm">{{el.count}}</label>

							<label for="#id-select-count"><strong>Статус заявки:</strong></label>
							<label id="id-num-req" class="form-control-sm">{{el.status}}</label>
						</div>
					</div>

					<div class="mt-3 column-2">
						<div class="row-2">
							<h3>Материалы:</h3>
							<ul class="list-group">
								<li v-for="el in aAddedMaterials" class="list-group-item">{{el}}</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<script src="~/js/MRP.js"></script>
	<script src="~/js/Route.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>