@{
	Layout = "_Layout";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>@ViewData["Title"]</title>
	<link href="~/css/Header.css" rel="stylesheet" />
	<link href="~/css/Main.css" rel="stylesheet" />
	<link href="~/css/Footer.css" rel="stylesheet" />
</head>
<body>
	<script src="https://cdn.jsdelivr.net/npm/vue"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="https://use.fontawesome.com/1c903a9a3d.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.2/FileSaver.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.2/xlsx.min.js"></script>

	<div id="main_mrp">
		<!-- Главная секция кнопок -->
		<div class="btn-block-main">
			<!-- Левая секция кнопок -->
			<div class="btn-left-block">
				<div class="btns">
					@*<input class="form-control input-search" id="id-search" type="text" v-on:keyup.enter="searchCard" placeholder="Поиск по ФИО или № карты пациента">*@
				</div>
			</div>

			<!-- Правая секция кнопок -->
			<div class="btn-right-block">
				<button type="button" class="btn-item btn btn-default btn-create-card" data-toggle="modal" data-target="#create-card-modal">Перейти к мониторингу количества запасов</button>

				<button type="button" class="btn-item btn btn-default btn-create-card" data-toggle="modal" data-target="#create-card-modal">Перейти к заявкам потребностей</button>
			</div>
		</div>

		<div class="block-tables">
			<!-- Секция с левой таблицей со списком заявок. -->
			<div class="mr-2">
				<h3>Список заявок</h3>
				<table class="table table-bordered">
					<thead>
						<tr>
							<th class="text-center" scope="col">
								<button class="btn btn-link" value="card_number">
									№ заявки
								</button>
							</th>

							<th class="text-center" scope="col">
								<button class="btn btn-link" value="fio">
									Количество
								</button>
							</th>

							<th class="text-center" scope="col">
								<button class="btn btn-link" value="fio">
									Ед.Изм.
								</button>
							</th>

							<th class="text-center" scope="col">
								<button class="btn btn-link" value="fio">
									Статус
								</button>
							</th>
						</tr>
					</thead>

					<tbody>
						<tr class="tbl-item tbl-row-click" data-toggle="modal" data-target="#details-request-modal" v-for="el in aRequests" v-on:click="onGetRequest">
							@*<td class="text-center req-id">
								<span>{{el.id}}</span>
							</td>*@

							<td class="text-center">
								<span>{{el.number}}</span>
							</td>

							<td class="text-center">
								<span>{{el.count}}</span>
							</td>

							<td class="text-center">
								<span>{{el.measure}}</span>
							</td>

							<td class="text-center">
								<span>{{el.status}}</span>
							</td>
						</tr>
					</tbody>
				</table>
			</div>

			<!-- Секция с правой таблицей со списком материалов складов. -->
			<div>
				<h3>Список материалов на складах</h3>
				<table class="table table-bordered">
					<thead>
						<tr>
							<th class="text-center" scope="col">
								<button class="btn btn-link" value="card_number">
									Код
								</button>
							</th>

							<th class="text-center" scope="col">
								<button class="btn btn-link" value="fio">
									Материал
								</button>
							</th>

							<th class="text-center" scope="col">
								<button class="btn btn-link" value="fio">
									Группа
								</button>
							</th>

							<th class="text-center" scope="col">
								<button class="btn btn-link" value="fio">
									Ед.Изм.
								</button>
							</th>

							<th class="text-center" scope="col">
								<button class="btn btn-link" value="fio">
									Количество
								</button>
							</th>
						</tr>
					</thead>

					<tbody>
						<tr class="tbl-item tbl-row-click" data-toggle="modal" data-target="#details-material-modal" v-for="el in aMaterials" v-on:click="onGetMaterial">
							<td class="text-center req-id">
								<span>{{el.id}}</span>
							</td>

							<td class="text-center">
								<span>{{el.code}}</span>
							</td>

							<td class="text-center">
								<span>{{el.description}}</span>
							</td>

							<td class="text-center">
								<span>{{el.pathName}}</span>
							</td>

							<td class="text-center">
								<span>шт.</span>
							</td>

							<td class="text-center">
								<span>{{el.volume}}</span>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>

		<!-- Секция модального окна подробнее о заявке. -->
		<div class="modal fade" id="details-request-modal" tabindex="-1" role="dialog" aria-labelledby="requestModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content" v-for="el in concreteRequest">
					<div class="modal-header">
						<h5 class="modal-title" id="requestModalLabel">Детали заявки № {{el.number}}</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>

					<div class="modal-body">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th class="text-center" scope="col">№ заявки</th>
									<th class="text-center" scope="col">Количество</th>
									<th class="text-center" scope="col">Ед.Изм.</th>
									<th class="text-center" scope="col">Статус</th>
								</tr>
							</thead>

							<tbody>
								<tr id="tbl-item-edit" class="tbl-item" v-for="el in concreteRequest">
									<td class="text-center req-id">
										<span>{{el.id}}</span>
									</td>

									<td class="text-center">
										<textarea id="id" class="form-control form-control-modal">{{el.number}}</textarea>
									</td>

									<td class="text-center">
										<textarea id="id-card-number" class="form-control form-control-modal">{{el.count}}</textarea>
									</td>

									<td class="text-center">
										<textarea id="id-name" class="form-control form-control-modal">{{el.measure}}</textarea>
									</td>

									<td class="text-center">
										<textarea id="id-date-of-birth" class="form-control form-control-modal">{{el.status}}</textarea>
									</td>
								</tr>
							</tbody>
						</table>
					</div>

					<div class="modal-footer">
						<button type="button" class="btn-item btn-modal btn btn-default" data-dismiss="modal">Закрыть</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Секция модального окна подробнее о материале. -->
		<div class="modal fade" id="details-material-modal" tabindex="-1" role="dialog" aria-labelledby="materialModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content" v-for="el in concreteMaterial">
					<div class="modal-header">
						<h5 class="modal-title" id="materialModalLabel">Детали материала с кодом {{el.code}}</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>

					<div class="modal-body">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th class="text-center" scope="col">Код</th>
									<th class="text-center" scope="col">Материал</th>
									<th class="text-center" scope="col">Группа</th>
									<th class="text-center" scope="col">Ед.Изм.</th>
									@*<th class="text-center" scope="col">Количество</th>*@
								</tr>
							</thead>

							<tbody>
								<tr id="tbl-item-edit" class="tbl-item" v-for="el in concreteMaterial">
									<td class="text-center req-id">
										<span>{{el.id}}</span>
									</td>

									<td class="text-center">
										<textarea id="id" class="form-control form-control-modal">{{el.code}}</textarea>
									</td>

									<td class="text-center">
										<textarea id="id-card-number" class="form-control form-control-modal">{{el.description}}</textarea>
									</td>

									<td class="text-center">
										<textarea id="id-name" class="form-control form-control-modal">{{el.name}}</textarea>
									</td>

									<td class="text-center">
										<textarea id="id-date-of-birth" class="form-control form-control-modal">{{el.volume}}</textarea>
									</td>
								</tr>
							</tbody>
						</table>
					</div>

					<div class="modal-footer">
						<button type="button" class="btn-item btn-modal btn btn-default" data-dismiss="modal">Закрыть</button>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="~/js/MRP.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>